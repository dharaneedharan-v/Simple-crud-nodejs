<!DOCTYPE html>
<html lang="en">

<head>
      <meta charset="UTF-8">
      <title>User List</title>
      <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gradient-to-r from-red-100 via-purple-100 to-green-100 p-6 ">
      <!-- <body class="bg-gray-100 p-6"> -->


      <div class="bg-gradient-to-r from-blue-100 via-purple-100 to-cyan-100 p-6 rounded-lg shadow mb-2">

            <div class="max-w-3xl mx-auto">
                  <h1 class="text-4xl font-bold-italic from-blue-100 mb-6">Simple Node JS Crud Application</h1>
                  <div class="flex justify-end mb-4">
                        <a href="/add"
                              class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 mb-4 inline-block ">Add
                              User</a>
                  </div>
                  <table class="w-full bg-white shadow rounded mt-4">
                        <thead>
                              <tr class="bg-gray-200 text-left">
                                    <th class="p-3">Name</th>
                                    <th class="p-3">Email</th>
                                    <th class="p-3">Actions</th>
                              </tr>
                        </thead>
                        <tbody>
                              <% users.forEach(user=> { %>
                                    <tr class="border-t">
                                          <td class="p-3">
                                                <%= user.name %>
                                          </td>
                                          <td class="p-3">
                                                <%= user.email %>
                                          </td>
                                          <td class="p-3 space-x-2">
                                                <a href="/edit/<%= user.id %>"
                                                      class="text-yellow-500 hover:underline">Edit</a>
                                                <form action="/delete/<%= user.id %>" method="POST" class="inline">
                                                      <button class="text-red-500 hover:underline"
                                                            type="submit">Delete</button>
                                                </form>
                                          </td>
                                    </tr>
                                    <% }) %>
                        </tbody>
                  </table>
            </div>
      </div>
</body>

</html>